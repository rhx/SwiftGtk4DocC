{"primaryContentSections":[{"kind":"declarations","declarations":[{"tokens":[{"kind":"keyword","text":"struct"},{"kind":"text","text":" "},{"kind":"identifier","text":"glyph_flags_t"}],"languages":["swift"],"platforms":["macOS"]}]}],"schemaVersion":{"major":0,"minor":3,"patch":0},"sections":[],"variants":[{"paths":["\/documentation\/harfbuzz\/glyph_flags_t"],"traits":[{"interfaceLanguage":"swift"}]}],"relationshipsSections":[{"identifiers":["doc:\/\/HarfBuzz\/SQ","doc:\/\/HarfBuzz\/s25ExpressibleByArrayLiteralP","doc:\/\/HarfBuzz\/s9OptionSetP","doc:\/\/HarfBuzz\/SY","doc:\/\/HarfBuzz\/s10SetAlgebraP"],"kind":"relationships","title":"Conforms To","type":"conformsTo"}],"identifier":{"url":"doc:\/\/HarfBuzz\/documentation\/HarfBuzz\/glyph_flags_t","interfaceLanguage":"swift"},"abstract":[{"type":"text","text":"Flags for "},{"type":"codeVoice","code":"glyphInfoT"},{"type":"text","text":"."}],"kind":"symbol","metadata":{"fragments":[{"kind":"keyword","text":"struct"},{"kind":"text","text":" "},{"kind":"identifier","text":"glyph_flags_t"}],"title":"glyph_flags_t","roleHeading":"Structure","role":"symbol","symbolKind":"struct","externalID":"s:8HarfBuzz13glyph_flags_tV","modules":[{"name":"HarfBuzz"}],"navigatorTitle":[{"kind":"identifier","text":"glyph_flags_t"}]},"hierarchy":{"paths":[["doc:\/\/HarfBuzz\/documentation\/HarfBuzz"]]},"topicSections":[{"title":"Initializers","identifiers":["doc:\/\/HarfBuzz\/documentation\/HarfBuzz\/glyph_flags_t\/init(_:)-6ccrr","doc:\/\/HarfBuzz\/documentation\/HarfBuzz\/glyph_flags_t\/init(_:)-6tds0","doc:\/\/HarfBuzz\/documentation\/HarfBuzz\/glyph_flags_t\/init(rawValue:)"]},{"title":"Instance Properties","identifiers":["doc:\/\/HarfBuzz\/documentation\/HarfBuzz\/glyph_flags_t\/int","doc:\/\/HarfBuzz\/documentation\/HarfBuzz\/glyph_flags_t\/intValue","doc:\/\/HarfBuzz\/documentation\/HarfBuzz\/glyph_flags_t\/rawValue","doc:\/\/HarfBuzz\/documentation\/HarfBuzz\/glyph_flags_t\/value"]},{"title":"Type Properties","identifiers":["doc:\/\/HarfBuzz\/documentation\/HarfBuzz\/glyph_flags_t\/defined","doc:\/\/HarfBuzz\/documentation\/HarfBuzz\/glyph_flags_t\/safeToInsertTatweel","doc:\/\/HarfBuzz\/documentation\/HarfBuzz\/glyph_flags_t\/unsafeToBreak","doc:\/\/HarfBuzz\/documentation\/HarfBuzz\/glyph_flags_t\/unsafeToConcat"]},{"title":"Default Implementations","identifiers":["doc:\/\/HarfBuzz\/documentation\/HarfBuzz\/glyph_flags_t\/Equatable-Implementations","doc:\/\/HarfBuzz\/documentation\/HarfBuzz\/glyph_flags_t\/OptionSet-Implementations","doc:\/\/HarfBuzz\/documentation\/HarfBuzz\/glyph_flags_t\/SetAlgebra-Implementations"],"generated":true}],"references":{"doc://HarfBuzz/documentation/HarfBuzz/glyph_flags_t/Equatable-Implementations":{"role":"collectionGroup","title":"Equatable Implementations","abstract":[],"identifier":"doc:\/\/HarfBuzz\/documentation\/HarfBuzz\/glyph_flags_t\/Equatable-Implementations","kind":"article","type":"topic","url":"\/documentation\/harfbuzz\/glyph_flags_t\/equatable-implementations"},"doc://HarfBuzz/s25ExpressibleByArrayLiteralP":{"type":"unresolvable","title":"Swift.ExpressibleByArrayLiteral","identifier":"doc:\/\/HarfBuzz\/s25ExpressibleByArrayLiteralP"},"doc://HarfBuzz/SY":{"type":"unresolvable","title":"Swift.RawRepresentable","identifier":"doc:\/\/HarfBuzz\/SY"},"doc://HarfBuzz/documentation/HarfBuzz/glyph_flags_t/unsafeToBreak":{"role":"symbol","title":"unsafeToBreak","fragments":[{"kind":"keyword","text":"static"},{"kind":"text","text":" "},{"kind":"keyword","text":"let"},{"kind":"text","text":" "},{"kind":"identifier","text":"unsafeToBreak"},{"kind":"text","text":": "},{"kind":"typeIdentifier","text":"glyph_flags_t","preciseIdentifier":"s:8HarfBuzz13glyph_flags_tV"}],"abstract":[{"type":"text","text":"Indicates that if input text is broken at the"},{"type":"text","text":" "},{"type":"text","text":"beginning of the cluster this glyph is part of,"},{"type":"text","text":" "},{"type":"text","text":"then both sides need to be re-shaped, as the"},{"type":"text","text":" "},{"type":"text","text":"result might be different."},{"type":"text","text":" "},{"type":"text","text":"On the flip side, it means that when this"},{"type":"text","text":" "},{"type":"text","text":"flag is not present, then it is safe to break"},{"type":"text","text":" "},{"type":"text","text":"the glyph-run at the beginning of this"},{"type":"text","text":" "},{"type":"text","text":"cluster, and the two sides will represent the"},{"type":"text","text":" "},{"type":"text","text":"exact same result one would get if breaking"},{"type":"text","text":" "},{"type":"text","text":"input text at the beginning of this cluster"},{"type":"text","text":" "},{"type":"text","text":"and shaping the two sides separately."},{"type":"text","text":" "},{"type":"text","text":"This can be used to optimize paragraph"},{"type":"text","text":" "},{"type":"text","text":"layout, by avoiding re-shaping of each line"},{"type":"text","text":" "},{"type":"text","text":"after line-breaking."}],"identifier":"doc:\/\/HarfBuzz\/documentation\/HarfBuzz\/glyph_flags_t\/unsafeToBreak","kind":"symbol","type":"topic","url":"\/documentation\/harfbuzz\/glyph_flags_t\/unsafetobreak"},"doc://HarfBuzz/s9OptionSetP":{"type":"unresolvable","title":"Swift.OptionSet","identifier":"doc:\/\/HarfBuzz\/s9OptionSetP"},"doc://HarfBuzz/documentation/HarfBuzz/glyph_flags_t/safeToInsertTatweel":{"role":"symbol","title":"safeToInsertTatweel","fragments":[{"kind":"keyword","text":"static"},{"kind":"text","text":" "},{"kind":"keyword","text":"let"},{"kind":"text","text":" "},{"kind":"identifier","text":"safeToInsertTatweel"},{"kind":"text","text":": "},{"kind":"typeIdentifier","text":"glyph_flags_t","preciseIdentifier":"s:8HarfBuzz13glyph_flags_tV"}],"abstract":[{"type":"text","text":"In scripts that use elongation (Arabic,"},{"type":"text","text":" "},{"type":"text","text":"Mongolian, Syriac, etc.), this flag signifies"},{"type":"text","text":" "},{"type":"text","text":"that it is safe to insert a U+0640 TATWEEL"},{"type":"text","text":" "},{"type":"text","text":"character before this cluster for elongation."},{"type":"text","text":" "},{"type":"text","text":"This flag does not determine the"},{"type":"text","text":" "},{"type":"text","text":"script-specific elongation places, but only"},{"type":"text","text":" "},{"type":"text","text":"when it is safe to do the elongation without"},{"type":"text","text":" "},{"type":"text","text":"interrupting text shaping."},{"type":"text","text":" "},{"type":"text","text":"Since: 5.1.0"}],"identifier":"doc:\/\/HarfBuzz\/documentation\/HarfBuzz\/glyph_flags_t\/safeToInsertTatweel","kind":"symbol","type":"topic","url":"\/documentation\/harfbuzz\/glyph_flags_t\/safetoinserttatweel"},"doc://HarfBuzz/documentation/HarfBuzz/glyph_flags_t/defined":{"role":"symbol","title":"defined","fragments":[{"kind":"keyword","text":"static"},{"kind":"text","text":" "},{"kind":"keyword","text":"let"},{"kind":"text","text":" "},{"kind":"identifier","text":"defined"},{"kind":"text","text":": "},{"kind":"typeIdentifier","text":"glyph_flags_t","preciseIdentifier":"s:8HarfBuzz13glyph_flags_tV"}],"abstract":[{"type":"text","text":"All the currently defined flags."}],"identifier":"doc:\/\/HarfBuzz\/documentation\/HarfBuzz\/glyph_flags_t\/defined","kind":"symbol","type":"topic","url":"\/documentation\/harfbuzz\/glyph_flags_t\/defined"},"doc://HarfBuzz/documentation/HarfBuzz/glyph_flags_t/unsafeToConcat":{"role":"symbol","title":"unsafeToConcat","fragments":[{"kind":"keyword","text":"static"},{"kind":"text","text":" "},{"kind":"keyword","text":"let"},{"kind":"text","text":" "},{"kind":"identifier","text":"unsafeToConcat"},{"kind":"text","text":": "},{"kind":"typeIdentifier","text":"glyph_flags_t","preciseIdentifier":"s:8HarfBuzz13glyph_flags_tV"}],"abstract":[{"type":"text","text":"Indicates that if input text is changed on one"},{"type":"text","text":" "},{"type":"text","text":"side of the beginning of the cluster this glyph"},{"type":"text","text":" "},{"type":"text","text":"is part of, then the shaping results for the"},{"type":"text","text":" "},{"type":"text","text":"other side might change."},{"type":"text","text":" "},{"type":"text","text":"Note that the absence of this flag will NOT by"},{"type":"text","text":" "},{"type":"text","text":"itself mean that it IS safe to concat text."},{"type":"text","text":" "},{"type":"text","text":"Only two pieces of text both of which clear of"},{"type":"text","text":" "},{"type":"text","text":"this flag can be concatenated safely."},{"type":"text","text":" "},{"type":"text","text":"This can be used to optimize paragraph"},{"type":"text","text":" "},{"type":"text","text":"layout, by avoiding re-shaping of each line"},{"type":"text","text":" "},{"type":"text","text":"after line-breaking, by limiting the"},{"type":"text","text":" "},{"type":"text","text":"reshaping to a small piece around the"},{"type":"text","text":" "},{"type":"text","text":"breaking position only, even if the breaking"},{"type":"text","text":" "},{"type":"text","text":"position carries the"},{"type":"text","text":" "},{"type":"reference","isActive":true,"identifier":"doc:\/\/HarfBuzz\/documentation\/HarfBuzz\/glyph_flags_t\/unsafeToBreak"},{"type":"text","text":" or when"},{"type":"text","text":" "},{"type":"text","text":"hyphenation or other text transformation"},{"type":"text","text":" "},{"type":"text","text":"happens at line-break position, in the following"},{"type":"text","text":" "},{"type":"text","text":"way:"},{"type":"text","text":" "},{"type":"text","text":"1. Iterate back from the line-break position"},{"type":"text","text":" "},{"type":"text","text":"until the first cluster start position that is"},{"type":"text","text":" "},{"type":"text","text":"NOT unsafe-to-concat, 2. shape the segment from"},{"type":"text","text":" "},{"type":"text","text":"there till the end of line, 3. check whether the"},{"type":"text","text":" "},{"type":"text","text":"resulting glyph-run also is clear of the"},{"type":"text","text":" "},{"type":"text","text":"unsafe-to-concat at its start-of-text position;"},{"type":"text","text":" "},{"type":"text","text":"if it is, just splice it into place and the line"},{"type":"text","text":" "},{"type":"text","text":"is shaped; If not, move on to a position further"},{"type":"text","text":" "},{"type":"text","text":"back that is clear of unsafe-to-concat and retry"},{"type":"text","text":" "},{"type":"text","text":"from there, and repeat."},{"type":"text","text":" "},{"type":"text","text":"At the start of next line a similar algorithm can"},{"type":"text","text":" "},{"type":"text","text":"be implemented. That is: 1. Iterate forward from"},{"type":"text","text":" "},{"type":"text","text":"the line-break position until the first cluster"},{"type":"text","text":" "},{"type":"text","text":"start position that is NOT unsafe-to-concat, 2."},{"type":"text","text":" "},{"type":"text","text":"shape the segment from beginning of the line to"},{"type":"text","text":" "},{"type":"text","text":"that position, 3. check whether the resulting"},{"type":"text","text":" "},{"type":"text","text":"glyph-run also is clear of the unsafe-to-concat"},{"type":"text","text":" "},{"type":"text","text":"at its end-of-text position; if it is, just splice"},{"type":"text","text":" "},{"type":"text","text":"it into place and the beginning is shaped; If not,"},{"type":"text","text":" "},{"type":"text","text":"move on to a position further forward that is clear"},{"type":"text","text":" "},{"type":"text","text":"of unsafe-to-concat and retry up to there, and repeat."},{"type":"text","text":" "},{"type":"text","text":"A slight complication will arise in the"},{"type":"text","text":" "},{"type":"text","text":"implementation of the algorithm above,"},{"type":"text","text":" "},{"type":"text","text":"because while our buffer API has a way to"},{"type":"text","text":" "},{"type":"text","text":"return flags for position corresponding to"},{"type":"text","text":" "},{"type":"text","text":"start-of-text, there is currently no position"},{"type":"text","text":" "},{"type":"text","text":"corresponding to end-of-text.  This limitation"},{"type":"text","text":" "},{"type":"text","text":"can be alleviated by shaping more text than needed"},{"type":"text","text":" "},{"type":"text","text":"and looking for unsafe-to-concat flag within text"},{"type":"text","text":" "},{"type":"text","text":"clusters."},{"type":"text","text":" "},{"type":"text","text":"The "},{"type":"reference","isActive":true,"identifier":"doc:\/\/HarfBuzz\/documentation\/HarfBuzz\/glyph_flags_t\/unsafeToBreak"},{"type":"text","text":" flag will"},{"type":"text","text":" "},{"type":"text","text":"always imply this flag."},{"type":"text","text":" "},{"type":"text","text":"To use this flag, you must enable the buffer flag"},{"type":"text","text":" "},{"type":"codeVoice","code":"produceUnsafeToConcat"},{"type":"text","text":" during"},{"type":"text","text":" "},{"type":"text","text":"shaping, otherwise the buffer flag will not be"},{"type":"text","text":" "},{"type":"text","text":"reliably produced."},{"type":"text","text":" "},{"type":"text","text":"Since: 4.0.0"}],"identifier":"doc:\/\/HarfBuzz\/documentation\/HarfBuzz\/glyph_flags_t\/unsafeToConcat","kind":"symbol","type":"topic","url":"\/documentation\/harfbuzz\/glyph_flags_t\/unsafetoconcat"},"doc://HarfBuzz/documentation/HarfBuzz/glyph_flags_t/init(rawValue:)":{"role":"symbol","title":"init(rawValue:)","fragments":[{"kind":"identifier","text":"init"},{"kind":"text","text":"("},{"kind":"externalParam","text":"rawValue"},{"kind":"text","text":": "},{"kind":"typeIdentifier","text":"UInt32","preciseIdentifier":"s:s6UInt32V"},{"kind":"text","text":")"}],"abstract":[{"type":"text","text":"Creates a new instance with the specified raw value"}],"identifier":"doc:\/\/HarfBuzz\/documentation\/HarfBuzz\/glyph_flags_t\/init(rawValue:)","kind":"symbol","type":"topic","url":"\/documentation\/harfbuzz\/glyph_flags_t\/init(rawvalue:)"},"doc://HarfBuzz/docum