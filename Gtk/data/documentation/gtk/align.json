L"},{"type":"codeVoice","code":"are treated similar to"},{"type":"text","text":"GTK_ALIGN_CENTER"},{"type":"codeVoice","code":"and"},{"type":"text","text":"GTK_ALIGN_FILL`, except that it"},{"type":"text","text":" "},{"type":"text","text":"positions the widget to line up the baselines, where that is supported."}]}]}],"schemaVersion":{"major":0,"minor":3,"patch":0},"sections":[],"variants":[{"paths":["\/documentation\/gtk\/align"],"traits":[{"interfaceLanguage":"swift"}]}],"identifier":{"url":"doc:\/\/Gtk\/documentation\/Gtk\/Align","interfaceLanguage":"swift"},"abstract":[{"type":"text","text":"Controls how a widget deals with extra space in a single dimension."}],"kind":"symbol","metadata":{"fragments":[{"kind":"keyword","text":"typealias"},{"kind":"text","text":" "},{"kind":"identifier","text":"Align"}],"title":"Align","roleHeading":"Type Alias","role":"symbol","symbolKind":"typealias","externalID":"s:3Gtk5Aligna","modules":[{"name":"Gtk"}],"navigatorTitle":[{"kind":"identifier","text":"Align"}]},"hierarchy":{"paths":[["doc:\/\/Gtk\/documentation\/Gtk"]]},"references":{"doc://Gtk/documentation/Gtk/Box":{"role":"symbol","title":"Box","fragments":[{"kind":"keyword","text":"class"},{"kind":"text","text":" "},{"kind":"identifier","text":"Box"}],"abstract":[{"type":"text","text":"The "},{"type":"codeVoice","code":"GtkBox"},{"type":"text","text":" widget arranges child widgets into a single row or column."}],"identifier":"doc:\/\/Gtk\/documentation\/Gtk\/Box","kind":"symbol","type":"topic","navigatorTitle":[{"kind":"identifier","text":"Box"}],"url":"\/documentation\/gtk\/box"},"doc://Gtk/documentation/Gtk/Widget":{"role":"symbol","title":"Widget","fragments":[{"kind":"keyword","text":"class"},{"kind":"text","text":" "},{"kind":"identifier","text":"Widget"}],"abstract":[{"type":"text","text":"The base class for all widgets."}],"identifier":"doc:\/\/Gtk\/documentation\/Gtk\/Widget","kind":"symbol","type":"topic","navigatorTitle":[{"kind":"identifier","text":"Widget"}],"ur