{"primaryContentSections":[{"kind":"declarations","declarations":[{"tokens":[{"kind":"keyword","text":"case"},{"kind":"text","text":" "},{"kind":"identifier","text":"preload"}],"languages":["swift"],"platforms":["macOS"]}]},{"kind":"content","content":[{"anchor":"discussion","level":2,"type":"heading","text":"Discussion"},{"type":"paragraph","inlineContent":[{"type":"text","text":"Setting this property allows finer grained reaction to an ongoing"},{"type":"text","text":" "},{"type":"text","text":"drop at the cost of loading more data."}]},{"type":"paragraph","inlineContent":[{"type":"text","text":"The default value for this property is "},{"type":"codeVoice","code":"false"},{"type":"text","text":" to avoid downloading"},{"type":"text","text":" "},{"type":"text","text":"huge amounts of data by accident."}]},{"type":"paragraph","inlineContent":[{"type":"text","text":"For example, if somebody drags a full document of gigabytes of text"},{"type":"text","text":" "},{"type":"text","text":"from a text editor across a widget with a preloading drop target,"},{"type":"text","text":" "},{"type":"text","text":"this data will be downloaded, even if the data is ultimately dropped"},{"type":"text","text":" "},{"type":"text","text":"elsewhere."}]},{"type":"paragraph","inlineContent":[{"type":"text","text":"For a lot of data formats, the amount of data is very small (like"},{"type":"text","text":" "},{"type":"codeVoice","code":"GDK_TYPE_RGBA"},{"type":"text","text":"), so enabling this property does not hurt at all."},{"type":"text","text":" "},{"type":"text","text":"And for local-only Drag-and-Drop operations, no data transfer is done,"},{"type":"text","text":" "},{"type":"text","text":"so enabling it there is free."}]}]}],"schemaVersion":{"major":0,"minor":3,"patch":0},"sections":[],"variants":[{"paths":["\/documentation\/gtk\/droptargetpropertyname\/preload"],"traits":[{"interfaceLanguage":"swift"}]}],"identifier":{"url":"doc:\/\/Gtk\/documentation\/Gtk\/DropTargetPropertyName\/preload","interfaceLanguage":"swift"},"abstract":[{"type":"text","text":"Whether the drop data should be preloaded when the pointer is only"},{"type":"text","text":" "},{"type":"text","text":"hovering over the widget but has not been released."}],"kind":"symbol","metadata":{"fragments":[{"kind":"keyword","text":"case"},{"kind":"text","text":" "},{"kind":"identifier","text":"preload"}],"title":"DropTargetPropertyName.preload","roleHeading":"Case","role":"symbol","symbolKind":"case","externalID":"s:3Gtk22DropTargetPropertyNameO7preloadyA2CmF","modules":[{"name":"Gtk"}]},"hierarchy":{"paths":[["doc:\/\/Gtk\/documentation\/Gtk","doc:\/\/Gtk\/documentation\/Gtk\/DropTargetPropertyName"]]},"references":{"doc://Gtk/documentation/Gtk/DropTargetPropertyName":{"role":"symbol","title":"DropTargetPropertyName","fragments":[{"kind":"keyword","text":"enum"},{"kind":"text","text":" "},{"kind":"identifier","text":"DropTargetPropertyName"}],"abstract":[],"identifier":"doc:\/\/Gtk\/documentation\/Gtk\/DropTargetPropertyName","kind":"symbol","type":"topic","navigatorTitle":[{"kind":"identifier","text":"DropTargetPropertyName"}],"url":"\/documentation\/gtk\/droptargetpropertyname"},"doc://Gtk/documentation/Gtk":{"role":"collection","title":"Gtk","abstract":[],"identifier":"doc:\/\/Gtk\/documentation\/Gtk","kind":"symbol","type":"topic","url":"\/documentation\/gtk"},"doc://Gtk/documentation/Gtk/DropTargetPropertyName/preload":{"role":"symbol","title":"DropTargetPropertyName.preload","fragments":[{"kind":"keyword","text":"case"},{"kind":"text","text":" "},{"kind":"identifier","text":"preload"}],"abstract":[{"type":"text","text":"Whether the drop data should be preloaded when the pointer is only"},{"type":"text","text":" "},{"type":"text","text":"hovering over the widget but has not been released."}],"identifier":"doc:\/\/Gtk\/documentation\/Gtk\/DropTargetPropertyName\/preload","kind":"symbol","type":"topic","url":"\/documentation\/gtk\/droptargetpropertyname\/preload"}}}